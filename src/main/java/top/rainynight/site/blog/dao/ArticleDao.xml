<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.rainynight.site.blog.dao.ArticleDao">

    <resultMap id="relevance" type="top.rainynight.site.blog.entity.Article" autoMapping="true">
        <association property="user" javaType="top.rainynight.site.user.entity.User">
            <result column="userid" property="userid"/>
            <result column="username" property="name" />
            <result column="password" property="password" />
         </association>
        <association property="articleclass" javaType="top.rainynight.site.blog.entity.Articleclass">
            <result column="classid" property="classid" />
            <result column="userid" property="userid" />
            <result column="articleclassname" property="name" />
        </association>
    </resultMap>

    <sql id="whereClause">
        <where>
            <if test="articleid!=null">articleid=#{articleid}</if>
            <if test="classid!=null">AND classid=#{classid}</if>
            <if test="userid!=null">AND userid=#{userid}</if>
            <if test="title!=null">AND title=#{title}</if>
            <if test="content!=null">AND content=#{content}</if>
            <if test="releasetime!=null">AND releasetime=#{releasetime}</if>
        </where>
    </sql>

    <select id="select" resultType="top.rainynight.site.blog.entity.Article">
        select articleid,title from article
        <include refid="whereClause"/>
        order by releasetime desc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="articleid">
         insert into article(classid,userid,title,content,releasetime) values(#{classid},#{userid},#{title},#{content},#{releasetime})
    </insert>

    <delete id="delete">
        delete from article where articleid = #{articleid}
    </delete>

    <update id="update">
        update article
        <set>
             articleid=#{articleid}
             <if test="classid!=null">,classid=#{classid}</if>
             <if test="userid!=null">,userid=#{userid}</if>
             <if test="title!=null">,title=#{title}</if>
             <if test="content!=null">,content=#{content}</if>
             <if test="releasetime!=null">,releasetime=#{releasetime}</if>
         </set>
         where articleid=#{articleid}
    </update>

    <select id="selectRelevance" resultMap="relevance">
        select *,articleclass.name as articleclassname,user.name as username from article left join articleclass on article.classid=articleclass.classid left join user on article.userid=user.userid
        <include refid="whereClause"/>
    </select>
</mapper>
