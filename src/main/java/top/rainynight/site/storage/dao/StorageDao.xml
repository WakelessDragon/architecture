<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.rainynight.site.storage.dao.StorageDao">

    <insert id="insert">
         insert into file(name,body) values(#{name},#{body})
    </insert>

    <select id="select" resultType="top.rainynight.site.storage.entity.Storage">
        select * from file where id=#{id}
    </select>

    <delete id="delete" >
        delete from file where id = #{id}
    </delete>

    <update id="update">
        update user
        <set>
            id=#{id}
            <if test="name!=null">name=#{name}</if>
            <if test="body!=null">body=#{body}</if>
        </set>
        where userid = #{userid}
    </update>
</mapper>
