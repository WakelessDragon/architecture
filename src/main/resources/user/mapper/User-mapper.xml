<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.rainynight.site.user.entity.User">

    <select id="select" resultType="top.rainynight.site.user.entity.User" parameterType="top.rainynight.site.user.entity.User">
         select * from user
         <where>
             <if test="userid!=null">userid=#{userid}</if>
             <if test="name!=null">AND name=#{name}</if>
             <if test="password!=null">AND password=#{password}</if>
         </where>
    </select>

    <insert id="insert" parameterType="top.rainynight.site.user.entity.User">
         insert into user(name,password) values(#{name},#{password})
    </insert>

    <delete id="delete" parameterType="top.rainynight.site.user.entity.User">
        delete from user where userid = #{userid}
    </delete>

    <update id="update" parameterType="top.rainynight.site.user.entity.User">
        update user
        <set>
            <if test="userid!=null">userid=#{userid}</if>
            <if test="name!=null">name=#{name}</if>
            <if test="password!=null">password=#{password}</if>
        </set>
        where userid = #{userid}
    </update>
</mapper>
