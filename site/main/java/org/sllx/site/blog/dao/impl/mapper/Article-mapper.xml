<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sllx.site.blog.entity.Article">

    <resultMap id="ArticleExpand" type="Article">

    </resultMap>

    <select id="get" resultType="Article" parameterType="Article">
        select * from article where article.articleid=#{articleid}
    </select>

    <select id="getExpand" resultType="ArticleExpand" parameterType="Article">
        select * from article left join articleclass left join user on article.classid=articleclass.classid and articleclass.userid=user.userid and article.userid=user.userid  where article.articleid=#{articleid}
    </select>

    <select id="list" resultType="Article" parameterType="Article">
         select * from user ${_parameter}
    </select>

    <insert id="insert" parameterType="Article">
         insert into user(name,password) values(#{name},#{password})
    </insert>

    <delete id="delete" parameterType="Article">
        delete from user where userid = #{userid}
    </delete>

    <update id="update" parameterType="Article">
        update user set name = #{name}, password = #{password} where userid = #{userid}
    </update>
</mapper>
